{
  "name": "mirrorbuddy",
  "version": "0.10.0",
  "private": true,
  "description": "MirrorBuddy - La Scuola Che Vorrei: AI-powered educational platform for students with learning differences",
  "author": "Roberto D'Angelo <roberdan@fightthestroke.org>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/FightTheStroke/MirrorBuddy"
  },
  "homepage": "https://github.com/FightTheStroke/MirrorBuddy",
  "bugs": {
    "url": "https://github.com/FightTheStroke/MirrorBuddy/issues"
  },
  "keywords": [
    "education",
    "ai",
    "accessibility",
    "dyslexia",
    "adhd",
    "autism",
    "cerebral-palsy",
    "tutoring",
    "voice-ai"
  ],
  "scripts": {
    "dev": "next dev",
    "reboot": "lsof -ti:3000 | xargs kill -9 2>/dev/null; next dev",
    "build": "BUILD_TIME=$(date -u +%Y-%m-%dT%H:%M:%SZ) next build",
    "start": "next start",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "test": "E2E_TESTS=1 playwright test",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "E2E_TESTS=1 playwright test --ui",
    "test:headed": "E2E_TESTS=1 playwright test --headed",
    "test:debug": "E2E_TESTS=1 playwright test --debug",
    "pre-push": "./scripts/pre-push-vercel.sh",
    "pre-release": "./scripts/pre-release-check.sh",
    "release:gate": "./scripts/release-gate.sh",
    "release:brutal": "./scripts/release-brutal.sh",
    "build:analyze": "ANALYZE=true npm run build",
    "check:bundle": "tsx scripts/check-bundle-size.ts",
    "version:patch": "npm version patch && cat package.json | grep version | head -1 | sed 's/.*: \"\\(.*\\)\".*/\\1/' > VERSION",
    "version:minor": "npm version minor && cat package.json | grep version | head -1 | sed 's/.*: \"\\(.*\\)\".*/\\1/' > VERSION",
    "version:major": "npm version major && cat package.json | grep version | head -1 | sed 's/.*: \"\\(.*\\)\".*/\\1/' > VERSION",
    "prepare": "husky",
    "postinstall": "prisma generate",
    "seed:admin": "tsx scripts/seed-admin.ts",
    "vercel-build": "prisma generate && npm run build && npm run seed:admin || echo 'Admin seed skipped'"
  },
  "overrides": {
    "hono": "4.11.4",
    "tmp": "0.2.5",
    "lodash": "4.17.23",
    "lodash-es": "4.17.23"
  },
  "dependencies": {
    "@azure/monitor-opentelemetry-exporter": "^1.0.0-beta.32",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.68.0",
    "@opentelemetry/resources": "^2.4.0",
    "@opentelemetry/sdk-node": "^0.210.0",
    "@opentelemetry/semantic-conventions": "^1.39.0",
    "@prisma/adapter-pg": "^7.2.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@react-pdf/renderer": "^4.3.2",
    "@types/dompurify": "^3.0.5",
    "@types/pdfjs-dist": "^2.10.377",
    "@uiw/react-md-editor": "^4.0.11",
    "@upstash/ratelimit": "^2.0.8",
    "@upstash/redis": "^1.36.1",
    "@vercel/analytics": "^1.6.1",
    "bcrypt": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cookie": "^1.1.1",
    "dompurify": "^3.3.1",
    "framer-motion": "^12.23.26",
    "function-plot": "^1.25.3",
    "fuse.js": "^7.1.0",
    "idb": "^8.0.3",
    "katex": "^0.16.27",
    "lucide-react": "^0.562.0",
    "markmap-lib": "^0.18.12",
    "markmap-view": "^0.18.12",
    "mathjs": "^15.1.0",
    "mermaid": "^11.12.2",
    "next": "16.1.1",
    "next-themes": "^0.4.6",
    "openai": "^6.15.0",
    "pdf-parse": "^2.4.5",
    "pdfjs-dist": "^5.4.530",
    "pg": "^8.16.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "recharts": "^3.6.0",
    "resend": "^6.7.0",
    "server-only": "^0.0.1",
    "swr": "^2.3.8",
    "tailwind-merge": "^3.4.0",
    "web-push": "^3.6.7",
    "web-vitals": "^5.1.0",
    "ws": "^8.18.3",
    "zod": "^4.3.5",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@lhci/cli": "^0.15.1",
    "@next/bundle-analyzer": "^16.1.1",
    "@playwright/test": "^1.57.0",
    "@prisma/client": "^7.2.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cookie": "^0.6.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "@types/web-push": "^3.6.4",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "better-sqlite3": "^12.6.0",
    "c8": "^10.1.3",
    "dotenv": "^17.2.3",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "prettier": "^3.5.0",
    "prisma": "^7.2.0",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^4.0.16"
  }
}
