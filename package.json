{
  "name": "mirrorbuddy",
  "version": "0.15.0",
  "private": true,
  "description": "MirrorBuddy - La Scuola Che Vorrei: AI-powered educational platform for students with learning differences",
  "author": "Roberto D'Angelo <roberdan@fightthestroke.org>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/FightTheStroke/MirrorBuddy"
  },
  "homepage": "https://github.com/FightTheStroke/MirrorBuddy",
  "bugs": {
    "url": "https://github.com/FightTheStroke/MirrorBuddy/issues"
  },
  "keywords": [
    "education",
    "ai",
    "accessibility",
    "dyslexia",
    "adhd",
    "autism",
    "cerebral-palsy",
    "tutoring",
    "voice-ai"
  ],
  "scripts": {
    "dev": "next dev",
    "reboot": "lsof -ti:3000 | xargs kill -9 2>/dev/null; next dev",
    "build": "BUILD_TIME=$(date -u +%Y-%m-%dT%H:%M:%SZ) next build",
    "start": "node .next/standalone/server.js",
    "build:mobile:web": "MOBILE_BUILD=1 BUILD_TIME=$(date -u +%Y-%m-%dT%H:%M:%SZ) next build",
    "build:mobile": "npm run build:mobile:web && npx cap copy && npx cap sync",
    "build:mobile:ios": "./scripts/mobile-build.sh ios",
    "build:mobile:android": "./scripts/mobile-build.sh android",
    "cap:sync": "npx cap sync",
    "cap:copy": "npx cap copy",
    "open:ios": "npx cap open ios",
    "open:android": "npx cap open android",
    "ios:check": "./scripts/ios-release-check.sh",
    "lint": "tsx scripts/lint-redirect-metadata.tsx && eslint",
    "typecheck": "tsc --noEmit",
    "typecheck:scripts": "tsc --noEmit --project tsconfig.scripts.json",
    "test": "E2E_TESTS=1 playwright test",
    "test:ensure-db": "./scripts/ensure-test-db.sh",
    "pretest": "./scripts/ensure-test-db.sh --check || echo 'Warning: PostgreSQL not running, tests may fail'",
    "test:e2e:smoke": "E2E_TESTS=1 playwright test --config playwright.config.iteration.ts --project=chromium e2e/smoke e2e/full-app-smoke.spec.ts",
    "test:e2e:admin": "E2E_TESTS=1 playwright test --config playwright.config.iteration.ts --project=chromium e2e/admin*.spec.ts",
    "test:e2e:i18n": "E2E_TESTS=1 playwright test --workers=2 --config playwright.config.iteration.ts --project=chromium e2e/locale-fixtures-basic.spec.ts e2e/locale-fixtures-integration.spec.ts e2e/locale-switching.spec.ts e2e/a11y-locales.spec.ts e2e/hreflang.spec.ts e2e/maestri-greetings-i18n.spec.ts e2e/welcome-hero-translations.spec.ts e2e/welcome-i18n.spec.ts e2e/welcome-i18n-advanced.spec.ts e2e/welcome-language-switcher.spec.ts",
    "test:e2e:compliance": "E2E_TESTS=1 playwright test --config playwright.config.iteration.ts --project=chromium e2e/compliance.spec.ts e2e/gdpr-compliance.spec.ts e2e/legal-ai-act.spec.ts e2e/legal-data-privacy.spec.ts",
    "test:e2e:security": "E2E_TESTS=1 playwright test --config playwright.config.iteration.ts --project=chromium e2e/csrf-protection.spec.ts e2e/authorization-cookies.spec.ts e2e/cookie-signing.spec.ts e2e/debug-endpoints-security.spec.ts",
    "test:e2e:cookie-signing": "E2E_TESTS=1 playwright test --config playwright.config.iteration.ts --project=cookie-signing",
    "test:e2e:api": "E2E_TESTS=1 playwright test --config playwright.config.iteration.ts --project=chromium e2e/critical-api-routes.spec.ts e2e/api-backend.spec.ts e2e/tools-api.spec.ts",
    "test:e2e:ai": "E2E_TESTS=1 playwright test --config playwright.config.iteration.ts --project=chromium e2e/chat-tools-integration.spec.ts e2e/maestro-conversation.spec.ts",
    "test:e2e:voice": "E2E_TESTS=1 playwright test --config playwright.config.iteration.ts --project=chromium e2e/voice-api.spec.ts",
    "test:e2e:visual": "VISUAL_REGRESSION=1 E2E_TESTS=1 playwright test --config playwright.config.iteration.ts --project=chromium e2e/full-ui-audit/visual-regression.spec.ts e2e/full-ui-audit/style-consistency.spec.ts e2e/admin-visual-regression-light-dark.spec.ts e2e/admin-visual-regression-responsive.spec.ts e2e/admin-visual-regression-components.spec.ts",
    "test:e2e:last-failed": "E2E_TESTS=1 playwright test --config playwright.config.iteration.ts --last-failed",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "E2E_TESTS=1 playwright test --ui",
    "test:headed": "E2E_TESTS=1 playwright test --headed",
    "test:debug": "E2E_TESTS=1 playwright test --debug",
    "test:affected": "./scripts/test-affected.sh",
    "test:affected:dry": "./scripts/test-affected.sh --dry-run",
    "lint:boundaries": "eslint --no-cache --rule 'local-rules/enforce-module-boundaries: [warn, {protectedModules: [safety, privacy, ai, education, rag, accessibility, tier, auth, security, compliance]}]' src/ 2>&1 | grep enforce-module-boundaries | wc -l | xargs -I{} echo 'Module boundary violations: {}'",
    "pre-push": "./scripts/pre-push-vercel.sh",
    "pre-release": "./scripts/pre-release-check.sh",
    "release:gate": "./scripts/release-gate.sh",
    "release:fast": "./scripts/release-fast.sh",
    "release:brutal": "./scripts/release-brutal.sh",
    "release:evidence": "./scripts/release-evidence-pack.sh",
    "ci:summary": "./scripts/ci-summary.sh",
    "ci:summary:quick": "./scripts/ci-summary.sh --quick",
    "ci:summary:full": "./scripts/ci-summary.sh --full",
    "build:analyze": "ANALYZE=true npm run build",
    "check:bundle": "tsx scripts/check-bundle-size.ts",
    "i18n:check": "npx tsx scripts/i18n-check.ts",
    "debt:check": "npx tsx scripts/debt-check.ts",
    "sentry:verify": "bash ./scripts/verify-sentry-config.sh",
    "sentry:smoke": "bash ./scripts/sentry-smoke-test.sh",
    "cursor:env:template": "tsx scripts/print-cursor-env-template.ts",
    "cursor:env:verify": "tsx scripts/cursor-env-verify.ts",
    "secrets:sync": "bash ./scripts/sync-github-secrets-from-env.sh",
    "version:patch": "npm version patch && cat package.json | grep version | head -1 | sed 's/.*: \"\\(.*\\)\".*/\\1/' > VERSION",
    "version:minor": "npm version minor && cat package.json | grep version | head -1 | sed 's/.*: \"\\(.*\\)\".*/\\1/' > VERSION",
    "version:major": "npm version major && cat package.json | grep version | head -1 | sed 's/.*: \"\\(.*\\)\".*/\\1/' > VERSION",
    "prepare": "husky",
    "postinstall": "prisma generate",
    "seed:admin": "tsx scripts/seed-admin.ts",
    "seed:tiers": "tsx prisma/seed-tiers.ts",
    "sim:nightly": "npx tsx scripts/nightly-sim-runner.ts",
    "sim:quick": "npx tsx scripts/nightly-sim-runner.ts --models 3b --dry-run",
    "vercel-build": "prisma generate && prisma migrate deploy && npm run build && npm run seed:admin || echo 'Admin seed skipped'"
  },
  "overrides": {
    "hono": "4.11.7",
    "tmp": "0.2.5",
    "lodash": "4.17.23",
    "lodash-es": "4.17.23"
  },
