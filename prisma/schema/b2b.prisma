// F-16: ContactRequest model for tracking B2B contact requests
model ContactRequest {
  id        String   @id @default(cuid())
  type      String   // general, schools, enterprise
  name      String
  email     String
  data      Json     // Form-specific fields (schoolName, companyName, etc.)
  status    String   @default("pending") // pending, contacted, converted, closed
  notes     String? // Admin notes
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([type])
  @@index([status])
  @@index([type, status])
}
